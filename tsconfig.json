{
  "compilerOptions": {                      
    "target": "es5",                                
    "module": "commonjs",                           
    "strict": true,                                 
    "esModuleInterop": true,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,    
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "app/dist",
    "sourceMap": true    
  },
  "include": ["./app/src/**/*", "src/config", "src/config"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
